# RAG-101 Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================================================
# REQUIRED: AI API Keys
# ============================================================================

# Google Gemini API Key (REQUIRED for RAG-101)
# Get from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY=your_google_gemini_api_key_here

# ============================================================================
# Infrastructure Configuration
# ============================================================================

# NATS Configuration
NATS_URL=nats://localhost:4222

# Milvus Configuration  
MILVUS_HOST=localhost
MILVUS_PORT=19530

# Docker Volume Directory (optional - uses current directory if not set)
DOCKER_VOLUME_DIRECTORY=.

# ============================================================================
# Application Configuration
# ============================================================================

# Session Management
SESSION_TTL=3600                    # Session timeout in seconds (1 hour)
MESSAGE_TTL=3600                    # Message TTL in seconds (1 hour)

# Worker Service Configuration
MAX_DOCUMENT_WORKERS=2              # Concurrent document processing
MAX_EMBEDDING_WORKERS=2             # Concurrent embedding generation
MAX_QUESTION_WORKERS=2              # Concurrent Q&A processing

# API Service Configuration
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=1                           # FastAPI worker processes
RATE_LIMIT_REQUESTS=100             # Requests per window
RATE_LIMIT_WINDOW=60                # Rate limit window in seconds

# UI Service Configuration
API_BASE_URL=http://localhost:8000  # API service URL
WS_BASE_URL=ws://localhost:8000     # WebSocket URL
AUTO_REFRESH_INTERVAL=30            # Dashboard refresh interval

# ============================================================================
# AI Model Configuration
# ============================================================================

# Embedding Model Configuration
EMBEDDING_MODEL=text-embedding-004   # Google Gemini embedding model
VECTOR_DIMENSION=768                 # Vector dimension for embeddings

# Chat Model Configuration
CHAT_MODEL=gemini-pro               # Google Gemini chat model

# ============================================================================
# Development & Debug Configuration
# ============================================================================

# Logging Configuration
LOG_LEVEL=INFO                      # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Debug Mode (set to 'true' for development)
DEBUG=false

# Environment Type
ENVIRONMENT=production              # development, staging, production

# ============================================================================
# CORS Configuration (for API service)
# ============================================================================

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:8501,http://localhost:3000

# ============================================================================
# Optional: Advanced Configuration
# ============================================================================

# Database Configuration (if using traditional DB in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/rag101

# Redis Configuration (if using Redis for caching)
# REDIS_URL=redis://localhost:6379/0

# Monitoring Configuration
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_PORT=9090

# Security Configuration
# JWT_SECRET_KEY=your_jwt_secret_here
# ENCRYPTION_KEY=your_encryption_key_here

# ============================================================================
# Development Overrides
# ============================================================================

# These variables override defaults in development mode
# DEV_NATS_URL=nats://localhost:4222
# DEV_MILVUS_HOST=localhost
# DEV_API_BASE_URL=http://localhost:8000